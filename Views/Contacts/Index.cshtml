@inject ApplicationDbContext _context
@inject UserManager<DBApplicationUser> UserManager
@model List<ContactViewModel>
@{
    ViewData["Title"] = "Мої контакти";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <p>No contacts yet. <a asp-action="Add">Add some contacts!</a></p>
}
else
{
    @foreach (var contact in Model)
    {
        <div class="d-flex justify-content-between align-items-center mb-2">
            <div>
                @{
                    var user = UserManager.FindByNameAsync(contact.UserName).Result;
                }
                <span>@user.FirstName @user.LastName (@user.UserName)</span>
                @if (contact.IsInitiator)
                {
                    <span class="badge badge-info ml-2">You sent request</span>
                }
                else
                {
                    <span class="badge badge-success ml-2">They sent request</span>
                }
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" name="userName" value="@contact.UserName" />
                <button type="submit" class="btn btn-danger btn-sm">Видалити</button>
            </form>
        </div>
    }
}

<div class="mt-3">
    <a asp-action="Add" class="btn btn-primary">Додати контакт</a>
    <a asp-action="Pending" class="btn btn-outline-primary">Переглянути запити, що очікують на розгляд</a>
</div>